<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/main_menu"
    tools:context=".Mainmenu">

    <Button
        android:id = "@+id/btn_gadget"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Gadget"
        android:textSize = "18dp"
        android:textColor="#000080"
        android:layout_alignTop="@+id/btn_shop"
        android:layout_toEndOf="@+id/btn_shop"
        android:layout_marginStart="35dp" />

    <Button
        android:id = "@+id/btn_shop"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"

        android:text="Shop"
        android:textSize = "18dp"
        android:textColor="#000080"
        android:layout_marginStart="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp" />


    <Button
        android:id = "@+id/btn_achievement"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"

        android:text="Achievement"
        android:textSize = "18dp"
        android:textColor="#000080"
        android:layout_alignTop="@+id/btn_gadget"
        android:layout_toEndOf="@+id/btn_gadget"
        android:layout_marginStart="27dp" />

    <Button
        android:id = "@+id/btn_friend"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"

        android:text="Friend"
        android:textSize = "18dp"
        android:textColor="#000080"
        android:layout_marginEnd="62dp"
        android:layout_alignTop="@+id/btn_gadget"
        android:layout_alignParentEnd="true" />

    <Button
        android:id = "@+id/btn_avatar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"

        android:text="Avatar"
        android:textSize = "18dp"
        android:textColor="#000080"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_shop"
        android:layout_marginBottom="23dp" />

</RelativeLayout>
